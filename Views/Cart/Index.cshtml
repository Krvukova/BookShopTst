@model IEnumerable<BookShopTest.Models.Entities.Book>

<h1>Your Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Continue Shopping</a>
