@model IEnumerable<BookShopTest.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

@if (!Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>User</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.UserId</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderStatus</td>
                </tr>
            }
        </tbody>
    </table>
}