@model BookShopTest.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
<p><strong>Status:</strong> @Model.OrderStatus</p>

<h3>Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Author</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>