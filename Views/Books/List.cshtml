@{
}

@model List<BookShopTest.Models.Entities.Book>

<h1>Books</h1>

<div class="mb-3">
    <a href="@Url.Action("Add", "Books")" class="btn btn-success">Add New Book</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Genre</th>
            <th>Quantity</th> <!-- Add this line -->
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Genre</td>
                <td>@book.Quantity</td> <!-- Add this line -->
                <td>
                    <!-- Action buttons (Edit, Delete) -->
                    <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-primary btn-sm">Edit</a>

                    <!-- Delete button -->
                    <form action="@Url.Action("Delete", "Books", new { id = book.Id })" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>