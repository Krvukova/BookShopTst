@model BookShopTest.Models.Entities.Book

@{
    ViewData["Title"] = "Edit Book";
}

<h1>@ViewData["Title"]</h1>

@if (Model is null)
{
    <p>Nije pronađena knjiga sa ovim Id</p>
}
else
{
    <form method="post" enctype="multipart/form-data">
        <!-- Hidden field for the book Id -->
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" value="@Model.Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" value="@Model.Author" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" step="0.01" min="0" asp-for="Price" value="@Model.Price" />
        </div>

        <div class="mt-3">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" asp-for="Genre" value="@Model.Genre" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" asp-for="Description" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <!-- File Upload Field for Cover Image -->
        <div class="mt-3">
            <label for="CoverImage">Cover Image</label>
            <input type="file" class="form-control" id="CoverImage" name="CoverImage" />

            <!-- Display the current cover image if available -->
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <div class="mt-2">
                    <img src="@Model.CoverImageUrl" alt="Cover Image" width="100" />
                </div>
            }
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <!-- Separate form for delete -->
    <form method="post" asp-action="Delete" asp-controller="Books" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
}
